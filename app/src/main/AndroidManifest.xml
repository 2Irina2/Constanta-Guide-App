<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttractionsActivity"
            android:label="@string/attractions" />
        <activity
            android:name=".ParksActivity"
            android:label="@string/parks" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/restaurants" />
        <activity
            android:name=".HotelsActivity"
            android:label="@string/hotels" />
        <activity
            android:name=".TransportationActivity"
            android:label="@string/transportation" />
        <activity android:name=".RouteActivity"></activity>
    </application>

</manifest>